<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="AnchorPane" fx:id="fxRoot" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.controllers.FXMLPrincipalController">
   <top>
      <MenuBar fx:id="fxMenuTop" BorderPane.alignment="CENTER">
        <menus>
          <Menu  mnemonicParsing="false" text="Options">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#chargeLogin" text="Go back to login" />
                  <MenuItem mnemonicParsing="false" onAction="#chargeWelcome" text="Welcome Pane" />
            </items>
          </Menu>
            <Menu fx:id="items" mnemonicParsing="false" text="Items">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#chargeAddItems" text="Add Item" />
                  <MenuItem mnemonicParsing="false" onAction="#listItems" text="List Items" />
                  <MenuItem mnemonicParsing="false" onAction="#chargeDeleteItems" text="Delete Item" />
               </items>
            </Menu>
            <Menu fx:id="customers" mnemonicParsing="false" text="Customers">
              <items>
                <MenuItem fx:id="customerAdd" mnemonicParsing="false" onAction="#chargeAddCustomer" text="Add Customer" />
                  <MenuItem fx:id="customerList" mnemonicParsing="false" onAction="#chargeListCustomer" text="List Customers" />
                  <MenuItem fx:id="customerDelete" mnemonicParsing="false" onAction="#chargeDeleteCustomer" text="Delete Customer" />

              </items>
            </Menu>
            <Menu fx:id="purchase" mnemonicParsing="false" text="Purchases">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#chargePurchases" text="Add Purchase" />
                  <MenuItem mnemonicParsing="false" onAction="#chargeDelete" text="Delete Purchase" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Reviews">
              <items>
                <MenuItem fx:id="addReviews" mnemonicParsing="false" onAction="#chargeAddReview" text="Add review" />
                  <MenuItem fx:id="deletereviewitem" mnemonicParsing="false" onAction="#chargeDeleteReview" text="Delete Review" />

              </items>
            </Menu>
        </menus>
      </MenuBar>

   </top>
</BorderPane>
